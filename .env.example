# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# Available models - comma-separated list
MODELS=o4-mini,gpt-4.1,gpt-4.1-mini

# Default model to use for chat and queries (must be in MODELS, OLLAMA_MODELS, or CUSTOM_MODELS)
# If not set or invalid, defaults to "gpt-4o-mini"
DEFAULT_MODEL=gpt-4.1-mini

# Model to use for document summarization and automatic queries
SUMMARY_MODEL=gpt-4.1-mini

# Suffix label to display for OpenAI models in dropdown
OPENAI_SUFFIX=(OpenAI)

# Custom OpenAI-compatible API Endpoint (e.g., http://localhost:8000/v1)
CUSTOM_API_ENDPOINT=

# Custom API Key (if required)
CUSTOM_API_KEY=

# Available custom models (comma-separated)
CUSTOM_MODELS=

# Suffix label for custom provider models
CUSTOM_SUFFIX=(Custom)

# Ollama API Endpoint (e.g., http://localhost:11434)
OLLAMA_ENDPOINT=http://localhost:11434

# Ollama API Key (if required, else leave blank)
OLLAMA_API_KEY=

# Available Ollama models - comma-separated list
OLLAMA_MODELS=llama2,phi3

# Suffix label to display for Ollama models in dropdown
OLLAMA_SUFFIX=(Ollama)

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=WARNING
